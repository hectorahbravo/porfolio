---
import HtmlIcon from "../icons/HtmlIcon.astro";
import CssIcon from "../icons/CssIcon.astro";
import JsIcon from "../icons/JsIcon.astro";
import ReactIcon from "../icons/ReactIcon.astro";
import ExpressIcon from "../icons/ExpressIcon.astro";
import NodeIcon from "../icons/NodeIcon.astro";
import MongoIcon from "../icons/MongoIcon.astro";
import SocialPill from "./SocialPill.astro";
import GithubIcon from "../icons/GithubIcon.astro";
import LinkIcon from "../icons/LinkIcon.astro";

const PROJECTS = [
    {
        title: "Dogfile - App para control de mascotas",
        description:
            "DogFile es una plataforma web enfocada en el cuidado integral de los perros. Permite crear perfiles personalizados para cada mascota, incluyendo información como personalidad, vacunas, alimentación y alergias. También ofrece un mapa interactivo con lugares recomendados o peligrosos para perros, y un calendario para programar recordatorios de citas y medicamentos. Es una herramienta diseñada para organizar y mejorar la vida de tu perro de forma sencilla y práctica.",
        link: "https://dogfile.vercel.app/",
        repo: "https://github.com/hectorahbravo/dogfile-web",
        image: "/DogfileImage.webp",
        tags: [
            "HTML",
            "CSS",
            "JavaScript",
            "React",
            "ExpressJs",
            "NodeJs",
            "MongoDB",
        ],
    },
    {
        title: "Gustopolis - Blog de Recetas",
        description:
            "Gustopolis es una aplicación web de recetas que permite a los usuarios descubrir, crear y compartir platos, interactuar con la comunidad a través de likes y comentarios, y explorar el top 3 de recetas más populares gracias a la integración con la API de TheMealDB.",
        link: "https://gustopolis.onrender.com/",
        repo: "https://github.com/hectorahbravo/project-module2",
        image: "/GustopolisImage.webp",
        tags: ["HTML", "CSS", "JavaScript", "ExpressJs", "NodeJs", "MongoDB"],
    },
    {
        title: "HackAttack - Juego interactivo",
        description:
            "En HackAttack, enfrentarás niveles cada vez más desafiantes, acumulando puntos y desbloqueando nuevas habilidades mientras avanzas. Con enemigos mortales acechando en cada esquina, tu agilidad y precisión serán clave para la victoria. Este juego representa el inicio de mi viaje en Ironhack Spain, donde he aprendido y aplicado nuevas habilidades de programación para crear una experiencia única y emocionante para ti. ¡Únete a la batalla y demuestra tu valentía en el mundo digital de HackAttack!",
        link: "https://hectorahbravo.github.io/project-module-1/",
        repo: "https://github.com/hectorahbravo/project-module-1",
        image: "/HackattackImage.webp",
        tags: ["HTML", "CSS", "JavaScript"],
    },
];

const ICONS = {
    HTML: HtmlIcon,
    CSS: CssIcon,
    JavaScript: JsIcon,
    React: ReactIcon,
    ExpressJs: ExpressIcon,
    NodeJs: NodeIcon,
    MongoDB: MongoIcon,
};
---

{
    PROJECTS.map(({ image, title, description, tags, link, repo }) => (
        <article class="mb-15">
            <div class="sm:flex gap-x-6">
                <img
                    class="m-auto w-full h-max object-cover rounded-3xl shadow-2xl mt-5 sm:h-56 hover:border hover:border-yellow-200 "
                    src={image}
                    alt={`Captura de pantalla del proyecto ${title}`}
                />
                <div>
                    <h3 class="text-2xl font-semibold text-yellow-200/90 mb-2 pt-5">
                        {title}
                    </h3>

                    <ul class="flex flex-wrap gap-2 mb-4">
                        {tags.map((tag) => {
                            const Icon = ICONS[tag];
                            return (
                                <li
                                    class=" bg-white/5  border-white/10 rounded-full border  flex justify-center items-center py-0.5 px-2 text-xs gap-x-0.5 "
                                    {...Astro.props}
                                >
                                    <Icon class="w-3 h-3 " title={tag} />
                                    {tag}
                                </li>
                            );
                        })}
                    </ul>
                    <p class="mb-4 text-pretty">{description}</p>

                    <nav class="flex gap-4 mt-4 flex-wrap">
                        <SocialPill href={link}>
                            <LinkIcon class="size-4 md:size-6" />
                            Demo
                        </SocialPill>
                        <SocialPill href={repo}>
                            <GithubIcon class="size-4 md:size-6" />
                            Code
                        </SocialPill>
                    </nav>
                </div>
            </div>
        </article>
    ))
}
